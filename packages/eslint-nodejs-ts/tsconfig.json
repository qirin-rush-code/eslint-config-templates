{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "paths": {
      "utility/*": ["server/utility/*"],
    }
  },
  "include": [
    "server"
  ]
}
