{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "paths": {
      "pages/*": ["src/pages/*"],
    }
  },
  "include": [
    "src"
  ]
}
